<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frameLayout3"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RegisterFragment">

    <View
        android:id="@+id/viewLine"
        android:layout_width="wrap_content"
        android:layout_height="1dp"
        android:layout_marginTop="154dp"
        android:background="#000000"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/viewLine2"
        android:layout_width="wrap_content"
        android:layout_height="1dp"
        android:layout_marginBottom="24dp"
        android:background="#000000"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textViewRegPageTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="32dp"
        android:text="User Login"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="40sp"
        android:textStyle="bold|italic"
        app:layout_constraintBottom_toTopOf="@+id/viewLine"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/editTextRegisterPgEmail"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="24dp"
        android:ems="10"
        android:hint="Enter Email "
        android:inputType="textPersonName"
        android:textColor="@color/black"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextRegFragName" />

    <EditText
        android:id="@+id/editTextRegisterPgPassword"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:ems="10"
        android:hint="Enter Password"
        android:inputType="textPersonName"
        android:textColor="@color/black"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="@+id/editTextRegisterPgEmail"
        app:layout_constraintStart_toStartOf="@+id/editTextRegisterPgEmail"
        app:layout_constraintTop_toBottomOf="@+id/editTextRegisterPgEmail" />

    <Button
        android:id="@+id/buttonRegisterPgRegister"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="54dp"
        android:text="Register"
        android:backgroundTint="@color/yellow_button_header"
        android:textAllCaps="false"
        android:textColor="@color/blue_button_header_text"
        android:textSize="24sp"
        android:textStyle="bold|italic"
        app:cornerRadius="90dp"
        app:layout_constraintEnd_toEndOf="@+id/editTextRegisterPgPassword"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/editTextRegisterPgPassword"
        app:layout_constraintTop_toBottomOf="@+id/editTextRegisterPgPassword" />

    <Button
        android:id="@+id/buttonRegisterPgCancel"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="Cancel"
        android:backgroundTint="@color/yellow_button_header"
        android:textAllCaps="false"
        android:textColor="@color/blue_button_header_text"
        android:textSize="24sp"
        android:textStyle="bold|italic"
        app:cornerRadius="90dp"
        app:layout_constraintEnd_toEndOf="@+id/buttonRegisterPgRegister"
        app:layout_constraintStart_toStartOf="@+id/buttonRegisterPgRegister"
        app:layout_constraintTop_toBottomOf="@+id/buttonRegisterPgRegister" />

    <EditText
        android:id="@+id/editTextRegFragName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:ems="10"
        android:hint="Enter Name"
        android:inputType="textPersonName"
        android:textColor="@color/black"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="@+id/editTextRegisterPgPassword"
        app:layout_constraintStart_toStartOf="@+id/editTextRegisterPgPassword"
        app:layout_constraintTop_toBottomOf="@+id/viewLine" />
</androidx.constraintlayout.widget.ConstraintLayout>