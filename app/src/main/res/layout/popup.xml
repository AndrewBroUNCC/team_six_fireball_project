<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/bellota_light"
        android:paddingRight="2dp"
        android:text="Update Profile"
        android:textColor="@color/black"
        android:textSize="34sp"
        android:textStyle="bold|italic"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.553"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textViewUpdatePopUpCancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="16dp"
        android:text="Cancel"
        android:textAllCaps="false"
        android:textColor="@color/blue_button_header_text"
        android:textSize="14sp"
        android:textStyle="bold|italic"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/buttonUpdatePopUpUpdateName"
        app:layout_constraintTop_toBottomOf="@+id/buttonUpdatePopUpUpdateName"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/buttonUpdatePopUpUpdatePicture"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:backgroundTint="@color/yellow_button_header"
        android:text="Save Url"
        android:textAllCaps="false"
        android:textColor="@color/blue_button_header_text"
        android:textSize="14sp"
        android:textStyle="bold|italic"
        app:cornerRadius="90dp"
        app:layout_constraintEnd_toEndOf="@+id/editTextPopUpUrlSave"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextPopUpUrlSave" />

    <Button
        android:id="@+id/buttonUpdatePopUpUpdateName"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:backgroundTint="@color/yellow_button_header"
        android:text="Update User Name"
        android:textAllCaps="false"
        android:textColor="@color/blue_button_header_text"
        android:textSize="14sp"
        android:textStyle="bold|italic"
        app:cornerRadius="90dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextUpdatePopUpUserName" />

    <ImageView
        android:id="@+id/imageViewPopUpImage"
        android:layout_width="350dp"
        android:layout_height="300dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="32dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView8" />

    <EditText
        android:id="@+id/editTextUpdatePopUpUserName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="35dp"
        android:ems="10"
        android:gravity="center"
        android:hint="Enter New User Name"
        android:inputType="textPersonName"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="@+id/buttonUpdatePopUpUpdateName"
        app:layout_constraintStart_toStartOf="@+id/buttonUpdatePopUpUpdateName"
        app:layout_constraintTop_toBottomOf="@+id/buttonUpdatePopUpUpdatePicture" />

    <EditText
        android:id="@+id/editTextPopUpUrlSave"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:ems="10"
        android:gravity="center"
        android:hint="Enter Picture URL"
        android:inputType="textPersonName"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="@+id/editTextUpdatePopUpUserName"
        app:layout_constraintStart_toStartOf="@+id/editTextUpdatePopUpUserName"
        app:layout_constraintTop_toBottomOf="@+id/textView12" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="Example: https://i.imgur.com/OmtSapF.jpeg"
        android:textIsSelectable="true"
        app:layout_constraintEnd_toEndOf="@+id/editTextPopUpUrlSave"
        app:layout_constraintStart_toStartOf="@+id/editTextPopUpUrlSave"
        app:layout_constraintTop_toBottomOf="@+id/imageViewPopUpImage" />

    <TextView
        android:id="@+id/textView12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="Example: https://i.imgur.com/yNydVwX.jpeg"
        android:textIsSelectable="true"
        app:layout_constraintEnd_toEndOf="@+id/editTextPopUpUrlSave"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/textView10"
        app:layout_constraintTop_toBottomOf="@+id/textView10" />

    <Button
        android:id="@+id/buttonPopUpUpdate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/yellow_button_header"
        android:textAllCaps="false"
        android:textColor="@color/blue_button_header_text"
        android:textSize="14sp"
        android:textStyle="bold|italic"
        app:cornerRadius="90dp"
        android:text="Update Image"
        app:layout_constraintStart_toStartOf="@+id/editTextPopUpUrlSave"
        app:layout_constraintTop_toTopOf="@+id/buttonUpdatePopUpUpdatePicture" />

</androidx.constraintlayout.widget.ConstraintLayout>